{% if external_proxy_url == 'DIRECT' %}
Proxy           noproxy.{{localdomain}}:3128
NoProxy         *
{% else %}
Proxy           {{external_proxy_url}}
NoProxy         localhost, 127.0.0.*, 10.*, 192.168.*,172.*,{{external_proxy_no_proxy_rules}},.{{localdomain}}
{% endif %}
Listen          3128
Gateway         yes
